<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header') %>
    <body>        
        <div class="container mt-2"></div>
            <header>
                <%- include('../partials/nav') %>
                <div>
                    <h1>Welcome to Mr Coffee's Scheduling app</h1>  
                </div>                
            </header>
            <div>
                <form action="/users/createschedule" method="post">
                    <div>
                        <label for="id">ID:</label>
                        <input id="id" type="text" name="id">
                    </div>
                    <div>
                        <label for="day">Day:</label>
                        <input id="day" type="text" name="day">
                    </div>
                    <div>
                        <label for="start_at">Start_at:</label>
                        <input id="start_at" type="text" name="start_at">
                    </div>
                    <div>
                        <label for="end_at">End_at:</label>
                        <input id="end_at" type="text" name="end_at">
                    </div>
                    <div>
                        <button id="submit" type="submit">Create</button>
                    </div>
                    </form>
            </div>
            <main>
                <div>
                    <% schedules.forEach(schedule => { %>
                        <p><%= schedule.id %></p>
                        <p><%= schedule.day %></p>
                        <p><%= schedule.start_at %></p>
                        <p><%= schedule.end_at %></p><br><br>
                    <% }) %>
                </div>
            </main>                        
        </div>                            
		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    </body>    
</html>
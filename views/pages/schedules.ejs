<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/header') %>
    <body>        
        <div class="container mt-2"></div>
            <header>
                <%- include('../partials/nav') %>
                <div>
                    <h1>Welcome to Mr Coffee's Scheduling app</h1><br>
                </div>                
            </header>
            <div class="md-form">        
                <form action="/schedule" method="post">
                    <div>
                        <label for="day">Day:</label>
                        <select id="day" type="text" name="day" required></select>
                    </div>
                    <div>
                        <label for="starttime">Start_at: </label>
                        <input placeholder="Selected time" type="text" id="input-starttime" class="form-control timepicker">
                    </div>
                    <div>
                        <label for="endtime">End_at: </label>
                        <input placeholder="Selected time" type="text" id="input-endtime" class="form-control timepicker">
                    </div>
                    <div>
                        <button id="submit" type="submit">Create</button>
                    </div>
                </form>
            </div><br><br>
            <main>
                <div>
                    <% schedules.forEach(schedule => { %>
                        <p><strong>Day: </strong><%= schedule.day %></p>
                        <p><strong>Start_at: </strong><%= schedule.start_at %></p>
                        <p><strong>End_at: </strong><%= schedule.end_at %></p>
                    <% }) %>              
                </div>
            </main>                        
        </div>        
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>                    
		<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    </body>    
</html>